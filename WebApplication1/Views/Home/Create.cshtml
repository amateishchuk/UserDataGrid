@model WebApplication1.Models.CreateUserViewModel

@{Html.EnableClientValidation();}
@{Html.EnableUnobtrusiveJavaScript();}
@using (Ajax.BeginForm("Create", "Home", new AjaxOptions { UpdateTargetId = "UserContainer", HttpMethod = "Post" }, new { autocomplete = "off" }))
{
    <div class="modal-content">
        <div class="modal-header">
            <button class="close" data-dismiss="modal" area-hidden="true">x</button>
            <h4>Add new user</h4>
        </div>
        <div class="modal-body text-">

            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(false, null, new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control", placeholder = "albert76" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "Albert" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Einstein" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "+380937894563", maxlength = "13" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.EmailAddress, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control", placeholder = "albert76.einstein@test.tt" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.HomeAddress, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.HomeAddress, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>
        </div>

        <div class="modal-footer">

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input id="save" type="submit" value="Save" class="btn btn-primary" />
                    <input type="button" value="Close" class="btn btn-default" data-dismiss="modal" />
                </div>
            </div>
        </div>
    </div>
}
